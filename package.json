{
  "name": "typescript-template",
  "version": "1.0.0",
  "description": "Template repo for generic TypeScript /  Node.js library with tests & lint",
  "repository": "https://github.com/stscoundrel/typescript-template.git",
  "author": "stscoundrel <silvennoinen.sampo@gmail.com>",
  "license": "MIT",
  "private": false,
  "main": "dist/server.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "@koa/router": "^10.1.1",
    "elder-futhark": "^1.0.2",
    "futhorc": "^1.0.1",
    "futhork": "^1.1.1",
    "koa": "^2.13.1",
    "younger-futhark": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@stryker-mutator/core": "^5.0.1",
    "@stryker-mutator/jest-runner": "^5.1.0",
    "@types/jest": "^26.0.24",
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "babel-jest": "^27.0.6",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "jest": "^27.0.6",
    "supertest": "^6.1.6",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.2"
  },
  "scripts": {
    "dev": "ts-node-dev src/server.ts",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "jest": "jest --verbose --runInBand --passWithNoTests",
    "test:unit": "yarn jest",
    "test:mutation": "stryker run",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"statements\":\"90\", \"functions\":\"90\", \"branches\":\"90\", \"lines\":\"90\"}}'",
    "build": "tsc",
    "prepublishOnly": "yarn build && yarn test:unit"
  }
}
